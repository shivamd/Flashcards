<table class="stats-list">
<% if @rounds.any? %>
<caption><h2><%= current_user.name.capitalize.possessive %> games</h2></caption>
  <tr>
    <th>Num</th>
    <th>Deck</th>
    <th>Correct</th>
    <th>Time</th>
  </tr>


<% @rounds.each do |round| %>
  <tr>
    <td><a href="/results/<%= round.id %>"><%= @rounds.index(round) + 1 %></a></td>
    <td><%= round.deck.name %></td>
    <td><%= percentage_correct(round.guesses) %>%</td>
    <td><%= (round.created_at).ago_in_words %></td>
  </tr>
<% end %>
<% end %>
</table>



